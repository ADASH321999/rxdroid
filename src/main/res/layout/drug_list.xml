<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
>
    <com.sothree.slidinguppanel.SlidingUpPanelLayout android:id="@+id/sliding_panel"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
    >
		<android.support.v4.view.ViewPager android:id="@+id/drug_list_pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
		/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#eee"
        >
            <TextView android:id="@+id/text_notification_panel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/notification_panel_collapsed_height"
                android:gravity="center"
                android:text="Foobar"
            />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:src="@drawable/ic_morning"
            />
        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
	 
</LinearLayout>
